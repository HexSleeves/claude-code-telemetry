{
  "name": "claude-code-telemetry",
  "version": "0.1.0",
  "description": "Claude Code telemetry monitoring with Grafana",
  "main": "dist/claude-code-monitor.js",
  "scripts": {
    "build": "tsc",
    "start": "bun run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "monitor": "ts-node src/index.ts --poll",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  },
  "keywords": [
    "claude-code",
    "telemetry",
    "monitoring",
    "grafana",
    "prometheus"
